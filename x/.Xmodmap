clear      lock 
clear   control
clear      mod1
clear      mod4

! --------------------------------
! IBM Thinkpad T60/T61/R60/R61/Z60
! --------------------------------
! Left_Control
keycode      37 = Hyper_L
! Alt_key
keycode      64 = Super_L
! Caps_Lock
keycode      66 = Control_L
! Windows_key
keycode      133 = Alt_L

add     control = Control_L Control_R
add        mod1 = Alt_L Alt_R
add        mod4 = Super_L Super_R Hyper_L
